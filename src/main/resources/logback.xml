<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<!-- 从系统属性读取日志级别，如：-Dlog.level=DEBUG -->
	<property name="LOG_LEVEL" value="${log.level:-INFO}" />

	<!-- 定义控制台输出格式，支持 %X{Ip}、%X{Port} -->
	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>
				%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level [%X{Ip}:%X{Port}] %logger{36} - %msg%n
			</pattern>
		</encoder>
	</appender>

	<!-- 设置 root logger -->
	<root level="${LOG_LEVEL}">
		<appender-ref ref="CONSOLE"/>
	</root>
</configuration>


